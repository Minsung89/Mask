<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/main_top_radius"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="지역선택"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:prompt="@string/spinner_city"
                android:id="@+id/spCity"
                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <Spinner
                android:prompt="@string/spinner_county"
                android:id="@+id/spCounty"
                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <Spinner
                android:prompt="@string/spinner_district"
                android:id="@+id/spDistrict"
                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button

                android:textColor="#ffffff"
                android:background="#2f55ad"
                android:text="검색"
                android:textSize="16sp"
                android:id="@+id/addressSearch"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <Button
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:background="#2f55ad"
                android:text="광고보기"
                android:textSize="16sp"
                android:id="@+id/advertising"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:drawableLeft="@drawable/plenty"
                android:drawablePadding="10dp"
                android:text="충분"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawableLeft="@drawable/some"
                android:drawablePadding="10dp"
                android:text="보통"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawableLeft="@drawable/few"
                android:drawablePadding="10dp"
                android:text="부족"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:drawableLeft="@drawable/empty"
                android:drawablePadding="10dp"
                android:text="품절"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fiveDays"
            android:layout_marginBottom="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2f55ad"
            android:text="5부제"
            android:background="@drawable/refresh_radius"/>
        <ImageView
            android:id="@+id/refreshBtn"
            android:layout_marginBottom="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/refresh"
            android:padding="2dp"
            android:background="@drawable/refresh_radius"/>
        <ToggleButton
            android:textOn=""
            android:textOff=""
            android:id="@+id/myLocation"
            android:background="@drawable/my_location_off"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>


</RelativeLayout>