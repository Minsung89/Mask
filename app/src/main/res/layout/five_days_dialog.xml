<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:padding="8dp">

    <RelativeLayout
        android:background="@drawable/main_top_radius"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:id="@+id/fiveDaysState"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/fiveDaysLayout1"
                style="@style/fiveDaysLayoutDeselect">
                <TextView
                    android:id="@+id/fiveDaysDaysTv1"
                    style="@style/fiveDaysDayTextDeselect"
                    android:text="월요일"/>
                <TextView
                    android:id="@+id/fiveDaysAge1Tv1"
                    style="@style/fiveDaysAge1TextDeselect"
                    android:text="1"/>
                <TextView
                    android:id="@+id/fiveDaysAge2Tv1"
                    style="@style/fiveDaysAge2TextDeselect"
                    android:text="6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fiveDaysLayout2"
                style="@style/fiveDaysLayoutDeselect">
                <TextView
                    android:id="@+id/fiveDaysDaysTv2"
                    style="@style/fiveDaysDayTextDeselect"
                    android:text="화요일"/>
                <TextView
                    android:id="@+id/fiveDaysAge1Tv2"
                    style="@style/fiveDaysAge1TextDeselect"
                    android:text="2"/>
                <TextView
                    android:id="@+id/fiveDaysAge2Tv2"
                    style="@style/fiveDaysAge2TextDeselect"
                    android:text="7"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fiveDaysLayout3"
                style="@style/fiveDaysLayoutDeselect">
                <TextView
                    android:id="@+id/fiveDaysDaysTv3"
                    style="@style/fiveDaysDayTextDeselect"
                    android:text="수요일"/>
                <TextView
                    android:id="@+id/fiveDaysAge1Tv3"
                    style="@style/fiveDaysAge1TextDeselect"
                    android:text="3"/>
                <TextView
                    android:id="@+id/fiveDaysAge2Tv3"
                    style="@style/fiveDaysAge2TextDeselect"
                    android:text="8"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fiveDaysLayout4"
                style="@style/fiveDaysLayoutDeselect">
                <TextView
                    android:id="@+id/fiveDaysDaysTv4"
                    style="@style/fiveDaysDayTextDeselect"
                    android:text="목요일"/>
                <TextView
                    android:id="@+id/fiveDaysAge1Tv4"
                    style="@style/fiveDaysAge1TextDeselect"
                    android:text="4"/>
                <TextView
                    android:id="@+id/fiveDaysAge2Tv4"
                    style="@style/fiveDaysAge2TextDeselect"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fiveDaysLayout5"
                style="@style/fiveDaysLayoutDeselect">
                <TextView
                    android:id="@+id/fiveDaysDaysTv5"
                    style="@style/fiveDaysDayTextDeselect"
                    android:text="금요일"/>
                <TextView
                    android:id="@+id/fiveDaysAge1Tv5"
                    style="@style/fiveDaysAge1TextDeselect"
                    android:text="5"/>
                <TextView
                    android:id="@+id/fiveDaysAge2Tv5"
                    style="@style/fiveDaysAge2TextDeselect"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_below="@id/fiveDaysState"
            android:textColor="#111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 출생년도 끝자리"
            android:textSize="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textColor="#2f55ad"
                android:id="@+id/fiveDaysOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="16dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>